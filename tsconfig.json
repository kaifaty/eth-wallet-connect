{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES2015",
    "declaration": true, 
    "importHelpers": true, 
    "esModuleInterop": true, 
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015.collection",
      "es2015.promise",
      "esnext.bigint",
      "webworker"
    ],
    "moduleResolution": "node"
  }
}
